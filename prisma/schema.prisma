generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Currency {
  HNL
  USD
}

enum Debt {
  NO
  AUTOMATIC
  DEBT
  PAID
}

enum Type {
  INCOME
  EXPENSE
}

model User {
  id             String        @id @default(cuid())
  chatId         Int           @unique
  chatSubject    String
  chatSubSubject String
  chatHistory    String[]
  transactions   Transaction[]
  statementIdSet String?
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  description String
  date        DateTime
  Budget      Budget   @relation(fields: [BudgetId], references: [id])
  BudgetId    String
  notes       String?
  currency    Currency
  type        Type
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Category {
  id          String   @id @default(cuid())
  description String
  bugets      Budget[]
}

model Budget {
  id           String        @id @default(cuid())
  category     Category      @relation(fields: [categoryId], references: [id])
  categoryId   String
  transactions Transaction[]
  statement    Statement     @relation(fields: [statementId], references: [id])
  statementId  String
  limit        Float
  currency     Currency
  debt         Debt
  dueDate      DateTime?
  notes        String?
}

model Statement {
  id      String   @id @default(cuid())
  budgets Budget[]
  month   Int
  year    Int
  incomes String[]
}

model Income {
  id       String   @id @default(cuid())
  amount   Float
  source   String
  currency Currency
}
