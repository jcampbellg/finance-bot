generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Currency {
  HNL
  USD
}

enum Debt {
  NO
  AUTOMATIC
  DEBT
  PAID
}

enum Type {
  INCOME
  EXPENSE
}

model User {
  id             String        @id @default(cuid())
  chatId         Int           @unique
  chatSubject    String
  chatSubSubject String
  chatHistory    String[]
  transactions   Transaction[]
  statementIdSet String?
}

model Transaction {
  id          String   @id @default(cuid())
  amount      Float
  description String
  date        DateTime
  category    Category @relation(fields: [categoryId], references: [id])
  categoryId  String
  notes       String?
  currency    Currency
  type        Type
  user        User     @relation(fields: [userId], references: [id])
  userId      String
}

model Category {
  id           String        @id @default(cuid())
  description  String
  transactions Transaction[]
  statement    Statement     @relation(fields: [statementId], references: [id])
  statementId  String
  limit        Float
  currency     Currency
  debt         Debt
  dueDate      DateTime?
  notes        String?
}

model Statement {
  id         String     @id @default(cuid())
  categories Category[]
  month      Int
  year       Int
  incomes    Income[]
}

model Income {
  id          String    @id @default(cuid())
  amount      Float
  source      String
  currency    Currency
  statement   Statement @relation(fields: [statementId], references: [id])
  statementId String
}
