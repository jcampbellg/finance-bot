generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Currency {
  HNL
  USD
}

enum Type {
  INCOME
  EXPENSE
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
}

model Conversion {
  id          String   @id @default(cuid())
  dollarToHNL Float
  hnlToDollar Float
  date        DateTime @default(now())
}

model User {
  id             String        @id @default(cuid())
  chatId         Int           @unique
  fullName       String
  chatSubject    String
  chatSubSubject String
  chatHistory    String[]
  transactions   Transaction[]
  statementIdSet String?
}

model Transaction {
  id            String        @id @default(cuid())
  amount        Float
  description   String
  date          DateTime
  category      Category      @relation(fields: [categoryId], references: [id])
  categoryId    String
  notes         String?
  currency      Currency
  type          Type
  user          User          @relation(fields: [userId], references: [id])
  userId        String
  paymentMethod PaymentMethod
}

model Category {
  id           String        @id @default(cuid())
  description  String
  transactions Transaction[]
  statement    Statement     @relation(fields: [statementId], references: [id])
  statementId  String
  budget       Float
  currency     Currency
  isFixed      Boolean
  dueDate      Int?
  notes        String?
}

model Statement {
  id         String     @id @default(cuid())
  categories Category[]
  month      Int
  year       Int
  incomes    Income[]
}

model Income {
  id          String    @id @default(cuid())
  amount      Float
  source      String
  currency    Currency
  statement   Statement @relation(fields: [statementId], references: [id])
  statementId String
}
